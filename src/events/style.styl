// Timetable styles
// Local color references
timetable-accent = #FFB000
timetable-accent-dark = #cc8c00
timetable-bg = #272727
timetable-bg-light = #333333
timetable-bg-lighter = #3a3a3a
timetable-bg-lightest = #444444
timetable-muted = #555555

.timetable
    width: 100%
    border-collapse: collapse
    margin: 2rem 0
    font-size: 0.95rem
    border-radius: 8px
    overflow: hidden
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3)

    thead
        background: linear-gradient(135deg, timetable-accent, timetable-accent-dark)

        th
            padding: 1rem 1.2rem
            text-align: left
            font-weight: 600
            color: timetable-bg
            text-transform: uppercase
            font-size: 0.85rem
            letter-spacing: 0.5px

    tbody
        tr
            background: timetable-bg-light
            border-bottom: 1px solid timetable-bg-lightest
            transition: all 0.2s ease

            &:hover
                background: timetable-bg-lightest

            &:nth-child(even)
                background: timetable-bg-lighter

                &:hover
                    background: timetable-bg-lightest

            &:last-child
                border-bottom: none

        td
            padding: 1rem 1.2rem
            vertical-align: middle

            &:first-child
                font-weight: 500
                color: timetable-accent

            &:nth-child(2)
                font-weight: 500

            &:empty
                &::before
                    content: "â€”"
                    color: timetable-muted

@media (max-width: 768px)
    .timetable
        font-size: 0.85rem
        display: block
        overflow-x: auto

        thead
            th
                padding: 0.8rem
                font-size: 0.75rem

        tbody
            td
                padding: 0.8rem
                min-width: 120px
